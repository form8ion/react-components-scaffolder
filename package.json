{
  "name": "@form8ion/react-components-scaffolder",
  "description": "opinionated scaffolder for React component-library projects",
  "license": "MIT",
  "version": "0.0.0-semantically-released",
  "main": "lib/index.cjs.js",
  "module": "lib/index.es.js",
  "sideEffects": false,
  "files": [
    "lib/",
    "templates/"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": "form8ion/react-components-scaffolder",
  "bugs": "https://github.com/form8ion/react-components-scaffolder/issues",
  "homepage": "https://npm.im/@form8ion/react-components-scaffolder",
  "author": "Matt Travi <npm@travi.org> (https://matt.travi.org/)",
  "scripts": {
    "test": "npm-run-all --print-label --parallel lint:* --parallel test:*",
    "lint:lockfile": "lockfile-lint --path package-lock.json --type npm --validate-https --allowed-hosts npm",
    "lint:js": "eslint . --cache",
    "lint:md": "remark . --frail",
    "lint:sensitive": "ban",
    "lint:peer": "npm ls >/dev/null",
    "clean": "rimraf ./lib",
    "prebuild": "run-s clean",
    "build": "npm-run-all --print-label --parallel build:*",
    "build:js": "rollup --config",
    "watch": "run-s 'build:js -- --watch'",
    "prepack": "run-s build",
    "test:unit": "nyc run-s test:unit:base",
    "test:unit:base": "DEBUG=any mocha 'src/**/*-test.js'",
    "coverage:report": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "lint:gherkin": "gherkin-lint",
    "test:integration": "run-s 'test:integration:base -- --profile noWip'",
    "test:integration:base": "DEBUG=any cucumber-js test/integration --profile base",
    "test:integration:debug": "DEBUG=test run-s test:integration",
    "test:integration:wip": "run-s 'test:integration:base -- --profile wip'",
    "test:integration:focus": "run-s 'test:integration:base -- --profile focus'",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@babel/register": "7.17.7",
    "@cucumber/cucumber": "8.0.0-rc.2",
    "@form8ion/babel-preset": "1.6.83",
    "@form8ion/commitlint-config": "1.0.29",
    "@form8ion/eslint-config": "2.0.3",
    "@form8ion/eslint-config-cucumber": "1.4.0",
    "@form8ion/eslint-config-mocha": "1.2.17",
    "@form8ion/javascript": "3.5.3",
    "@form8ion/remark-lint-preset": "2.1.7",
    "@rollup/plugin-node-resolve": "13.1.3",
    "@travi/any": "2.0.19",
    "ban-sensitive-files": "1.9.17",
    "chai": "4.3.6",
    "codecov": "3.8.3",
    "cz-conventional-changelog": "3.3.0",
    "gherkin-lint": "4.2.2",
    "husky": "7.0.4",
    "lockfile-lint": "4.7.4",
    "mocha": "9.2.2",
    "npm-run-all": "4.1.5",
    "nyc": "15.1.0",
    "remark-cli": "10.0.1",
    "rimraf": "3.0.2",
    "rollup": "2.70.1",
    "rollup-plugin-auto-external": "2.0.0",
    "sinon": "13.0.1"
  },
  "dependencies": {
    "@form8ion/cypress-scaffolder": "2.2.0",
    "deepmerge": "^4.2.2",
    "make-dir": "^3.0.0"
  },
  "peerDependencies": {
    "@form8ion/javascript": ">=2.0.0"
  }
}
